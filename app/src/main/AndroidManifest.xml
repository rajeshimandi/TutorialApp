<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anuraj.tutorialsapplication">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.lifecycle.LifeCycleActivity"></activity>

        <activity
            android:name=".activities.uiwidgets.UIWidgetsActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".activities.intents.ActivityA"></activity>
        <activity android:name=".activities.intents.ActivityB"></activity>
        <activity android:name=".activities.fragments.FragmentActivity"></activity>
        <activity android:name=".activities.sharedprefs.SharedPrefActivity"></activity>
        <activity android:name=".activities.fragments.ViewPagerActivity"></activity>
        <activity android:name=".activities.retrofit.RetrofitActivity"></activity>
        <activity android:name=".activities.async.AyncTaskActivity"></activity>

    </application>

</manifest>